<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NHL Data</title>

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Style Sheet -->
    <link rel="stylesheet" href="/styles/styles.css">
</head>

<body>
    <div class="title">
        <h1>Select a team to view their schedule</h1>
    </div>
    <div class="grid-container">
        <%# create a clickable image for each of the 32 NHL teams %>
        <% if (locals.abvAndLogo) { %>
            <% abvAndLogo.forEach(team => { %>
                <form action="/schedule" method="POST">
                    <div class="grid-item">
                        <button type="submit" value="<%= team.abv %>" name="choice">
                            <img src="<%= team.url %>" alt="NHL Team Logo" data-id="<%= team.abv %>">
                        </button>
                            
                    </div>
                </form>

            <% }); %>
        <% } else { %>
            <div class="grid-item">
                    <a href="schedule.ejs">
                        <img src="/images/NHL-Logo.png" alt="NHL Team Logo">
                    </a>
            </div>
        <% } %>
    
    </div>

    <!-- <script type="module" src="/scripts/static.js"></script> -->
</body>
</html>